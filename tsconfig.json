{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "@playwright/test"
    ]
  },
  "include": [
    "tests/**/*",
    "pages/**/*",
    "test-data/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}